---
import logo from "../assets/BGW-logo.webp";
import Image from "astro/components/Image.astro";
import Button from "./Button.astro";
---

<nav>
  <div class="nav-container">
    <a href="/" class="logo-link">
      <Image
        class="bgw-logo"
        src={logo}
        alt="BGW California Logo"
        width={70}
        height={70}
      />
      <div class="logo-text">
        <span class="brand-name">BGW</span>
        <span class="brand-location">California</span>
      </div>
    </a>

    <ul class="links">
      <li>
        <a href="#">
          <Button variant="link">Home</Button>
        </a>
      </li>

      <li class="dropdown-wrapper">
        <Button variant="link">About Us ▾</Button>
        <ul class="dropdown-menu">
          <li><Button variant="link" width="full">Benefits</Button></li>
        </ul>
      </li>

      <li class="dropdown-wrapper">
        <Button variant="link">Services ▾</Button>
        <ul class="dropdown-menu">
          <li><Button variant="link" width="full">Plasti Dip</Button></li>
          <li><Button variant="link" width="full">Paint Protection</Button></li>
          <li><Button variant="link" width="full">Vinyl Wrap</Button></li>
          <li><Button variant="link" width="full">Window Tint</Button></li>
        </ul>
      </li>

      <li>
        <Button variant="link">Gallery</Button>
      </li>

      <li>
        <Button variant="primary" theme="light">CONTACT US</Button>
      </li>
    </ul>
  </div>
</nav>

<script is:inline>
  // Toggle solid background once the user leaves the hero area
  const onScroll = () => {
    const nav = document.querySelector("nav");
    if (!nav) return;
    const shouldBeSolid = window.scrollY > 40;
    nav.classList.toggle("scrolled", shouldBeSolid);
  };

  document.addEventListener("DOMContentLoaded", () => {
    onScroll();
    window.addEventListener("scroll", onScroll, { passive: true });
  });
</script>

<style>
  nav {
    width: 100%;
    height: 100px;
    display: flex;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 200;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0) 90%
    );
    box-shadow: none;
    font-family: Arial, Helvetica, sans-serif;
    transition:
      background-color 0.3s ease,
      box-shadow 0.3s ease,
      color 0.3s ease;
  }

  nav.scrolled {
    background: white;
    box-shadow: var(--box-shadow-sm);
  }

  .nav-container {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .bgw-logo {
    height: 100px;
    width: auto;
    display: block;
    /* filter: drop-shadow(0 0 6px rgba(0, 0, 0, 0.2)); */
    transition: filter 0.3s ease;
  }

  nav.scrolled .bgw-logo {
    filter: none;
  }

  .links {
    display: flex;
    align-items: center;
    /* gap: 40px; */
    list-style: none;
    margin: 0;
    padding: 0;
    height: 100%;
  }

  .links > li {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .links > li:last-child {
    height: auto;
  }

  .links a {
    text-decoration: none;
    color: white;
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1px;
    transition: color 0.3s;
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0 10px;
  }

  .links a:hover {
    color: #f1f1f1;
  }

  nav.scrolled .links a {
    color: #333;
  }

  nav.scrolled .links a:hover {
    color: black;
  }

  .dropdown-menu {
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    position: absolute;
    top: calc(100% - 20px);
    left: 38px;
    background-color: var(--color-background);
    min-width: 300px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    list-style: none;
    padding: 15px 0;
    border-top: 4px solid black;
    z-index: 200;
    transition: all 0.3s ease-in-out;
  }

  /* .dropdown-menu::before {
    content: "";
    position: absolute;
    top: -30px;
    left: 0;
    width: 100%;
    height: 30px;
    background: transparent;
  } */

  .dropdown-wrapper:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-menu li {
    display: block;
    height: auto;
  }

  .dropdown-menu li a {
    display: block;
    padding: 12px 25px;
    color: var(--color-text-dark);
    font-size: 13px;
    border-bottom: 1px solid var(--border-color);
    height: auto;
  }

  .dropdown-menu li a:hover {
    background-color: var(--border-color);
    color: black;
    padding-left: 35px;
  }

  button {
    color: var(--secondary-color);
    background-color: rgba(255, 255, 255, 0.12);
    border: 1px solid var(--primary-color);
    padding: 14px 30px;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s;
    display: block;
    line-height: 1;
  }

  button:hover {
    background-color: rgba(255, 255, 255, 0.18);
    transform: scale(1.05);
  }

  nav.scrolled button {
    background-color: black;
    border-color: black;
    color: white;
  }

  nav.scrolled button:hover {
    background-color: #333;
  }

  .bgw-logo {
    height: 70px;
    width: auto;
    display: block;
    filter: drop-shadow(0 0 6px rgba(0, 0, 0, 0.2));
    transition: filter 0.3s ease;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .logo-text {
    display: flex;
    color: var(--color-text-light);
    flex-direction: column;
  }

  .brand-name {
    color: var(--color-text-light);
    font-size: 24px;
    font-weight: 700;
    line-height: 1;
    letter-spacing: 1px;
    transition: color 0.3s ease;
  }

  .brand-location {
    color: var(--color-text-dark);
    font-size: 13px;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  nav.scrolled .brand-name {
    color: black;
  }

  nav.scrolled .brand-location {
    color: #555;
  }
</style>
