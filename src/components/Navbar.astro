---
import logo from '../assets/bgw-logo-wc.png';
---

<nav>
  <div class="nav-container">
    <a href="/" class="logo-link">
      <img class="bgw-logo" src={logo.src} alt="BGW California Logo" />
    </a>

    <ul class="links">
      <li><a href="#">Home</a></li>

      <li class="dropdown-wrapper">
        <a href="#" class="menu-item">About Us ▾</a>
        <ul class="dropdown-menu">
          <li><a href="#">Benefits</a></li>
        </ul>
      </li>

      <li class="dropdown-wrapper">
        <a href="#" class="menu-item">Services ▾</a>
        <ul class="dropdown-menu">
          <li><a href="#">Plasti Dip</a></li>
          <li><a href="#">Paint Protection</a></li>
          <li><a href="#">Vinyl Wrap</a></li>
          <li><a href="#">Window Tint</a></li>
        </ul>
      </li>

      <li><a href="#">Gallery</a></li>
      
      <li><button>Contact Us</button></li>
    </ul>
  </div>
</nav>

<style>
  nav {
    width: 100%;
    height: 100px;
    background-color: white;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    position: relative;
    z-index: 100;
    font-family: Arial, Helvetica, sans-serif;
  }

  .nav-container {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .bgw-logo {
    height: 120px;
    width: auto;
    display: block;
  }

  .links {
    display: flex;
    align-items: center;
    gap: 40px;
    list-style: none;
    margin: 0;
    padding: 0;
    height: 100%;
  }

  .links > li {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .links > li:last-child {
    height: auto;
  }

  .links a {
    text-decoration: none;
    color: #333;
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1px;
    transition: color 0.3s;
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0 10px;
  }

  .links a:hover {
    color: black;
  }

  .dropdown-menu {
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    position: absolute;
    top: 100%;
    left: -20px;
    background-color: white;
    min-width: 240px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    list-style: none;
    padding: 15px 0;
    border-top: 4px solid black;
    z-index: 200;
    transition: all 0.3s ease-in-out;
  }

  .dropdown-menu::before {
    content: "";
    position: absolute;
    top: -30px;
    left: 0;
    width: 100%;
    height: 30px;
    background: transparent;
  }

  .dropdown-wrapper:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-menu li {
    display: block;
    height: auto;
  }

  .dropdown-menu li a {
    display: block;
    padding: 12px 25px;
    color: #666;
    font-size: 13px;
    border-bottom: 1px solid #f5f5f5;
    height: auto;
  }

  .dropdown-menu li a:hover {
    background-color: #f8f8f8;
    color: black;
    padding-left: 35px;
  }

  button {
    background-color: black;
    color: white;
    border: none;
    padding: 14px 30px;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 14px;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s;
    display: block;
    line-height: 1;
  }

  button:hover {
    background-color: #333;
    transform: scale(1.05);
  }
</style>