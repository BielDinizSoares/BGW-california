---
export interface Props {
    variant?: "primary" | "secondary" | "outline" | "link";
    theme?: "light" | "dark";
    width?: "full" | "fit";
}

const { variant = "primary", theme = "light", width = "fit" } = Astro.props;
---

<button class={`btn btn--${variant} btn--${theme} btn--${width}`}>
    <slot />
</button>

<style>
    /* BASE (btn-more) */
    .btn {
        text-transform: uppercase;
        display: inline-block;
        padding: 12px 40px;
        background: transparent;
        text-decoration: none;
        font-weight: bold;
        letter-spacing: 2px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 0;
    }

    .btn:hover {
        scale: 1.05;
    }

    .btn--full {
        width: 100%;
        text-align: left !important;
    }

    .btn--fit {
        width: fit-content;
    }

    /* =====================
     THEME (light / dark)
     ===================== */

    .btn--light {
        --btn-color: var(--color-text-light);
        --btn-hover-color: black;
    }

    .btn--dark {
        --btn-color: black;
        --btn-hover-color: var(--color-text-light);
    }

    /* =====================
     VARIANTS
     ===================== */

    /* OUTLINE */
    .btn--outline {
        border: 2px solid var(--btn-color);
        color: var(--btn-color);
    }

    .btn--outline:hover {
        background-color: var(--btn-color);
        color: var(--btn-hover-color);
    }

    /* PRIMARY */
    .btn--primary {
        border: 2px solid var(--color-primary);
        background-color: var(--color-primary);
        color: var(--color-primary-foreground);
    }

    .btn--primary:hover {
        color: var(--color-primary-foreground);
    }

    /* LINK */
    .btn--link {
        color: var(--btn-color);
    }

    .btn--link:hover {
        color: var(--btn-color);
    }

    .btn--link::after {
        content: "";
        display: block;
        width: 0%;
        height: 2px;
        background-color: var(--btn-color);
        transition: all 0.3s ease;
    }

    .btn--link:hover::after {
        width: 100%;
    }
</style>
